# EditorConfig helps maintain consistent coding styles for multiple developers working on the same project

root = true

# All files
[*]
indent_style = space
indent_size = 2
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
insert_final_newline = true

# CSV files
[*.csv]
indent_size = 0
